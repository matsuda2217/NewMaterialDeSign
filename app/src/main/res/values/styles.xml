<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccents</item>

        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>
    <style name="MyMaterialTheme" parent="AppTheme">

    </style>
    <style name="MyToolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/windowBackground</item>
        <item name="android:textColorSecondary">@color/windowBackground</item>
    </style>
    <style name="MyToolbarPopup" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/windowBackground</item>
    </style>
</resources>
